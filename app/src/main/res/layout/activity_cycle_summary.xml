<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="12dp"
    tools:context=".CycleSummary">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_print"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Print Summary"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:cornerRadius="12dp"
        android:layout_marginTop="12dp"
        app:backgroundTint="@color/blue"/>
    <TextView
        android:id="@+id/tv_cycle_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cycle Summary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Cycle Metadata -->
    <TextView
        android:id="@+id/tv_cycle_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start: ... | End: ..."
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_cycle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: Regular"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_cycle_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length: 28 days"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Daily Logs RecyclerView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Logs"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_daily_logs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@android:color/black"
        android:scrollbars="vertical"/>


</LinearLayout>